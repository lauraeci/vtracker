<p id="notice"><%= notice %></p>

<h1>Listing Emails</h1>

<table class="table">
  <thead>
    <tr>
      <th>Member</th>
      <th>Subject</th>
      <th>Account</th>
      <th>Subject type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @emails.each do |email| %>
      <% member = Member.find email.member_id %>
      <% account = Account.find email.account_id %>
      <tr>
        <td><%= member.name %></td>
        <td><%= email.subject %></td>
        <td><%= account.email %></td>
        <td><%= email.subject_type %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Remove', email, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_email_path %>
