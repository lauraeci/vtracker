<%= form_for(setup_member(@member)) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :organization_id %><br>
    <%= f.number_field :organization_id, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :roles %><br>
    <%= f.select :roles, Member::ROLES.map {|m| [m.capitalize, m]}, {}, {:multiple => true, class: "input-lg form-control"} %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field form-group">
    <%= f.label :hours_worked %><br>
    <%= f.number_field :hours_worked, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :last_contacted_at %><br>
    <%= f.datetime_select :last_contacted_at, class: 'form-control' %>
  </div>

    <%= f.fields_for :address do |ff| %>
        <div class="field form-group">
          <%= ff.label :street1 %><br>
          <%= ff.text_field :street1, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= ff.label :street2 %><br>
          <%= ff.text_field :street2, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= ff.label :city %><br>
          <%= ff.text_field :city, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= ff.label :state %><br>
          <%= ff.text_field :state, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= ff.label :country %><br>
          <%= ff.text_field :country, class: 'form-control' %>
        </div>
        <div class="field form-group">
          <%= ff.label :zipcode %><br>
          <%= ff.number_field :zipcode, class: 'form-control' %>
        </div>
    <% end %>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-default" %>
  </div>
<% end %>
