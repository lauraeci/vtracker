<p id="notice"><%= notice %></p>

<h1><%= @member.name %></h1>

<p>
  <strong>Organization:</strong>
  <%= @member.organization_id %>
</p>

<p>
  <strong>First name:</strong>
  <%= @member.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @member.last_name %>
</p>

<p>
  <strong>Roles:</strong>
  <%= @member.formatted_roles %>
</p>

<p>
  <strong>Email:</strong>
  <%= @member.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @member.phone %>
</p>

<p>
  <strong>Age:</strong>
  <%= @member.age %>
</p>

<p>
  <strong>Hours worked:</strong>
  <%= @member.hours_worked %>
</p>

<p>
  <strong>Last contacted at:</strong>
  <%= @member.last_contacted_at %>
</p>

<p>
  <%= render @member.address %>
</p>


<table class="table">
  <tr>
    <td>
      <h3>Donations</h3>
    </td>
    <td>
      <%= link_to "Record Donation", new_donation_path(:member_id => @member.id), :method => "get" %>
    </td>
  </tr>
</table>

<strong>Total: </strong><%= number_to_currency(@member.donation_total) %>

<br><br>

<table class="table">
  <thead>
  <tr>
    <th>Amount</th>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @member.donations.each do |donation| %>
      <tr>
        <td><%= number_to_currency(donation.amount) %></td>
        <td><%= donation.created_at %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_member_path(@member) %> |
<%= link_to 'Back', members_path %>
