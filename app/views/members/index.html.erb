<p id="notice"><%= notice %></p>

<h1>Members</h1>

<%= link_to "Add New Member", new_member_path, :method => "get", class:"btn btn-default btn-lg pull-right" %>

<br>

<table class="table">
  <thead>
    <tr>
      <th>Organization</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Roles</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Age</th>
      <th>Hours worked</th>
      <th>Last Contacted At</th>
      <th>Donation Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
    <tr>
      <td><%= member.organization_id %></td>
      <td><%= member.first_name %></td>
      <td><%= member.last_name %></td>
      <td><%= member.formatted_roles %></td>
      <td><%= member.email %></td>
      <td><%= member.phone %></td>
      <td><%= member.age %></td>
      <td><%= member.hours_worked %></td>
      <td><%= member.last_contacted_at %></td>
      <td><%= number_to_currency(member.donation_total) %></td>
      <td><%= link_to 'Show', member %></td>
      <td><%= link_to 'Edit', edit_member_path(member) %></td>
      <td><%= link_to 'Remove', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
